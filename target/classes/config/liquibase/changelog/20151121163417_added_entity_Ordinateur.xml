<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Ordinateur.
    -->
    <changeSet id="20151121163417" author="jhipster">
        <createTable tableName="ORDINATEUR">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="type" type="varchar(255)"/>
            <column name="marque" type="varchar(255)"/>
            <column name="prix" type="decimal"/>
            <column name="cpu" type="varchar(255)"/>
            <column name="ram" type="varchar(255)"/>
            <column name="lecteur" type="varchar(255)"/>
            <column name="graveur" type="varchar(255)"/>
            <column name="bluetooth" type="varchar(255)"/>
            <column name="wifi" type="varchar(255)"/>
            <column name="cartegraphique" type="varchar(255)"/>
            <column name="dd" type="varchar(255)"/>
            <column name="tailleecran" type="varchar(255)"/>
            <column name="webcam" type="varchar(255)"/>
            <column name="image" type="blob"/>
        </createTable>

    </changeSet>
</databaseChangeLog>
